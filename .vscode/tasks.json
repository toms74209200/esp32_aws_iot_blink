{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Arduino compile",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "compile",
                "--fqbn",
                "esp32:esp32:esp32",
                "${workspaceRoot}/*.ino"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}